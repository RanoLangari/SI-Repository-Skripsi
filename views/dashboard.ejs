<%- include('./partials/header') %>

<!-- create modern dashboard using tailwind css -->
<div class="flex flex-col md:flex-row">
  <!-- show list skripsi -->
  <div class="w-full md:w-3/4 bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center">
      <h2 class="text-2xl font-bold">Daftar Skripsi</h2>
      <a
        href="/skripsi/create"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >Tambah Skripsi</a
      >
    </div>
    <div class="overflow-x-auto mt-6">
      <table class="table-auto border-collapse w-full">
        <thead>
          <tr class="rounded-lg text-sm font-medium text-gray-700 text-left">
            <th class="px-4 py-2 bg-gray-200" style="background-color:#f8f8f8">
              No
            </th>
            <th class="px-4 py-2" style="background-color:#f8f8f8">Judul</th>
            <th class="px-4 py-2" style="background-color:#f8f8f8">Status</th>
            <th class="px-4 py-2" style="background-color:#f8f8f8">Aksi</th>
          </tr>
        </thead>
        <tbody class="text-sm font-normal text-gray-700">
          <% skripsi.forEach((skripsi, index) => { %>
          <tr class="hover:bg-gray-100 border-b border-gray-200 py-10">
            <td class="px-4 py-4"><%= index + 1 %></td>
            <td class="px-4 py-4"><%= skripsi.judul %></td>
            <td class="px-4 py-4">
              <% if (skripsi.status == 'diterima') { %>
              <span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">
                <%= skripsi.status %>
              </span>
              <% } else if (skripsi.status == 'ditolak') { %>
              <span class="bg-red-200 text-red-600 py-1 px-3 rounded-full text-xs">
                <%= skripsi.status %>
              </span>
              <% } else
              { %>
              <span class="bg-yellow-200 text-yellow-600 py-1 px-3 rounded-full text-xs">
                <%= skripsi.status %>
              </span>
              <% } %>
            </td>
            <td class="px-4 py-4">
              <a
                href="/skripsi/<%= skripsi.id %>"
                class="text-blue-500 hover:text-blue-700"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- show profile -->
  <div class="w-full md:w-1/4 bg-white rounded-lg shadow-lg p-6 mt-6 md:mt-0">
    <h2 class="text-2xl font-bold">Profile</h2>
    <div class="mt-4">
      <div class="flex items-center justify-center">
        <img
          src="./img/FEB.png"
          alt=""
          class="rounded-full h-32 w-32 object-cover"
        />
      </div>
      <div class="text-center mt-4">
        <h2 class="text-lg font-semibold">Admin</h2>
        <div class="text-purple-500">Fakultas Ekonomi dan Bisnis</div>
      </div>
      <div class="mt-6">
        <div class="text-sm font-semibold">Email</div>
        <div class="text-sm font-normal text-gray-500">

        </div>
      </div>
      <div class="mt-2">
        <div class="text-sm font-semibold">NIP</div>
        <div class="text-sm font-normal text-gray-500">

        </div>
      </div>
      <div class="mt-2">
        <div class="text-sm font-semibold">No. HP</div>
        <div class="text-sm font-normal text-gray-500">

        </div>
      </div>

      <div class="mt-6 flex justify-center">
        <a
          href="/logout"
          class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          >Logout</a
        >
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>