<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- load tailwind from cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/3.3.6/tailwind.min.css"
    />
    <!-- load font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link rel="stylesheet" href="./style/style.css" />
    <title>Login Admin</title>
  </head>
  <body>
    <!-- create modern login page using tailwind css -->
    <div class="flex items-center justify-center h-screen bg-gray-200">
      <div class="w-full max-w-md">
        <img src="./img/FEB.png" alt="" class="mx-auto mb-4" />

        <form
          action="/api/admin/login"
          method="POST"
          class="bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4"
        >
          <div
            class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4"
            style="font-family: 'Roboto', sans-serif"
          >
            Login Admin
          </div>
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="username"
            >
              <b>Username</b>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              name="username"
              id="username"
              type="text"
              placeholder="username"
              required
            />
          </div>
          <div class="mb-6">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="password"
            >
              <b>Password</b>
            </label>
            <input
              class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
              name="password"
              id="password"
              type="password"
              placeholder="******************"
              required
            />
            <p class="text-red-500 text-xs italic">Please choose a password.</p>
          </div>
          <div class="flex items-center justify-between">
            <button
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Masuk
            </button>
            <a
              class="inline-block align-baseline font-normal text-sm text-blue-500 hover:text-blue-800"
              href="login-mhs"
            >
              Login Mahasiswa
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2023 FEB UNDANA. All rights reserved.
        </p>
      </div>
    </div>

    <!-- load tailwind from cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.9.6/tailwind.min.js"></script>

    <!-- load font awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>

    <!-- load sweetalert2 from cdn -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
      const form = document.querySelector("form");
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        Swal.fire({
          title: "Loading...",
          icon: "info",
          allowOutsideClick: false,
          showConfirmButton: false,
          willOpen: () => {
            Swal.showLoading();
          },
        });
        const username = document.querySelector("#username").value;
        const password = document.querySelector("#password").value;
        fetch("/api/admin/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ username, password }),
        })
          .then((res) => res.json())
          .then((data) => {
            if (data.status === "success") {
              Swal.fire({
                icon: "success",
                title: "Login Berhasil",
                text: data.message,
              }).then(() => {
                localStorage.setItem("jwt", data.token);
                window.location.href = "/admin";
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Login Gagal",
                text: data.message,
              });
            }
          })
          .catch((err) => {
            Swal.fire({
              icon: "error",
              title: "Login Gagal",
              text: err.message,
            });
          });
      });
    </script>
  </body>
</html>
