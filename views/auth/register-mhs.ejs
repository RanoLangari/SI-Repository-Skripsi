<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- load tailwind from cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/3.3.6/tailwind.min.css"
    />
    <!-- load font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link rel="stylesheet" href="./style/style.css" />
    <title>Register Mahasiswa</title>
  </head>
  <body>
    <!-- create modern login page using tailwind css -->
    <div class="flex items-center justify-center bg-gray-200">
      <div class="w-full max-w-md">
        <div class="flex justify-center mb-4">
          <img src="./img/FEB.png" alt="" class="mx-auto mb-4" />
        </div>

        <form
          action="/api/mahasiswa/register"
          method="POST"
          class="bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4"
        >
          <div
            class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4"
            style="font-family: 'Roboto', sans-serif"
          >
            Register Mahasiswa
          </div>
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="nim"
            >
              <b>NIM</b>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              name="nim"
              id="nim"
              type="text"
              placeholder="nim"
              required
            />
          </div>
          <!-- nama -->
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="nama"
            >
              <b>Nama</b>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              name="nama"
              id="nama"
              type="text"
              placeholder="nama"
              required
            />
          </div>
          <!-- jurusan -->
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="jurusan"
            >
              <b>Jurusan</b>
            </label>
            <select
              name="jurusan"
              id="jurusan"
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              required
            >
              <option value="">-- Pilih Jurusan --</option>
              <option value="Manajemen">Manajemen</option>
              <option value="Akuntansi">Akuntansi</option>
              <option value="Ekonomi Pembangunan">Ekonomi Pembangunan</option>
            </select>
          </div>
          <!-- semester -->
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="semester"
            >
              <b>Semester</b>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              name="semester"
              id="semester"
              type="text"
              placeholder="semester"
              required
            />
          </div>
          <!-- status kelulusan -->
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="status_kelulusan"
            >
              <b>Status Kelulusan</b>
            </label>
            <select
              name="status_kelulusan"
              id="status_kelulusan"
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              required
            >
              <option value="">-- Pilih Status Kelulusan --</option>
              <option value="Lulus">Lulus</option>
              <option value="Belum Lulus">Belum Lulus</option>
            </select>
          </div>
          <div class="mb-6">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="password"
            >
              <b>Password</b>
            </label>
            <input
              class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
              name="password"
              id="password"
              type="password"
              placeholder="******************"
              required
            />
            <p class="text-red-500 text-xs italic">Please choose a password.</p>
          </div>
          <!-- confirm-password -->
          <div class="mb-6">
            <label
              class="block text-gray-700 text-sm font-normal mb-2"
              for="confirm-password"
            >
              <b>Confirm Password</b>
            </label>
            <input
              class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
              name="confirm-password"
              id="confirm-password"
              type="password"
              placeholder="******************"
              required
            />
            <p class="text-red-500 text-xs italic">Please choose a password.</p>
          </div>

          <div class="flex items-center justify-between">
            <button
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Daftar Akun
            </button>
            <a
              class="inline-block align-baseline font-normal text-sm text-blue-500 hover:text-blue-800"
              href="login-mhs"
            >
              Login Mahasiswa
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2023 FEB UNDANA. All rights reserved.
        </p>
      </div>
    </div>

    <!-- load tailwind from cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.9.6/tailwind.min.js"></script>

    <!-- load font awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>

    <!-- load sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
      const form = document.querySelector("form");
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        Swal.fire({
          title: "Loading...",
          icon: "info",
          allowOutsideClick: false,
          showConfirmButton: false,
          willOpen: () => {
            Swal.showLoading();
          },
        });
        const nim = document.querySelector("#nim").value;
        const nama = document.querySelector("#nama").value;
        const jurusan = document.querySelector("#jurusan").value;
        const semester = document.querySelector("#semester").value;
        const status_kelulusan =
          document.querySelector("#status_kelulusan").value;
        const password = document.querySelector("#password").value;
        const confirm_password =
          document.querySelector("#confirm-password").value;

        fetch("/api/mahasiswa/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            nim,
            nama,
            jurusan,
            semester,
            status_kelulusan,
            password,
            confirm_password,
          }),
        })
          .then((res) => res.json())
          .then(
            (
              res // console.log(res)
            ) => {
              if (res.status === "success") {
                Swal.fire({
                  icon: "success",
                  title: "Register Berhasil",
                  text: res.message,
                  timer: 1000,
                }).then(() => {
                  window.location.href = "/login-mhs";
                });
              } else {
                Swal.fire({
                  icon: "error",
                  title: "Oops...",
                  text: res.message,
                  timer: 1000,
                });
              }
            }
          )
          .catch((err) => console.log(err));
      });
    </script>
  </body>
</html>
